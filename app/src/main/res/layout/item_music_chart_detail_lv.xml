<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical">


    <TextView
        android:gravity="center"
        android:id="@+id/music_chart_music_sort_tv"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:singleLine="true"
        android:textColor="@color/black" />

    <ImageView
        android:layout_marginStart="10dp"
        android:id="@+id/music_chart_music_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/music_chart_music_name_tv"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:singleLine="true"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_chart_music_info_tv"
            android:layout_toStartOf="@+id/right_ll"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="info" />

        <LinearLayout
            android:id="@+id/right_ll"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/music_chart_music_songers_tv"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="songer"
                android:maxLength="12"
                android:singleLine="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/music_chart_music_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30:50"
                android:singleLine="true"
                android:textColor="@color/black" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>