<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yun.opernv2">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name="com.yun.opernv2.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_laucner_ion"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.yun.opernv2.ui.activity.LauncherActivity"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yun.opernv2.ui.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTop" />
        <activity
            android:name="com.yun.opernv2.ui.activity.MyDownloadActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.yun.opernv2.ui.activity.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.yun.opernv2.ui.activity.ShowImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:theme="@android:style/Theme.Translucent" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name="com.yun.opernv2.ui.activity.AboutUsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.yun.opernv2.ui.activity.MyCollectionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.yun.opernv2.ui.activity.WriteFeedbackActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name="com.yun.opernv2.ui.activity.ShowOpernByCategoryActivity" />
        <activity android:name="com.yun.opernv2.ui.activity.WebViewActivity" />
        <activity android:name="com.yun.opernv2.ui.activity.DonateActivity" />
    </application>

</manifest>